<div id="cadastro">
	<h1>  Usuários </h1>
    <fieldset class="pequeno">
    	<legend>Cadastro de Usuários</legend>	

		<%= form_for(@veiculo) do |f| %>
		  <% if @veiculo.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@veiculo.errors.count, "error") %> prohibited this veiculo from being saved:</h2>
		
		      <ul>
		      <% @veiculo.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>
		
		  <div class="field">
		    <%= f.label :placa %><br />
		    <%= f.text_field :placa %>
		  </div>
		  <div class="field">
		    <%= f.label :chassi %><br />
		    <%= f.text_field :chassi %>
		  </div>
		  <div class="field">
		    <%= f.label :renavam %><br />
		    <%= f.text_field :renavam %>
		  </div>
		  <div class="field">
		    <%= f.label :serie %><br />
		    <%= f.text_field :serie %>
		  </div>
		  <div class="field">
		    <%= f.label :Modelo %><br />
		    <%= f.collection_select(:modelo_id, Modelo.order(:nome), :id, :nome, {:prompt => ''}) %>
		  </div>
		  <div class="field">
		    <%= f.label :combustivel %><br />
		    <%= f.collection_select(:combustivel_id, Combustivel.order(:nome), :id, :nome, {:prompt => ''}) %>
		  </div>
		  <div class="field">
		    <%= f.label :ano_fabricacao %><br />
		    <%= f.text_field :ano_fabricacao %>
		  </div>
		  <div class="field">
		    <%= f.label :ano_modelo %><br />
		    <%= f.text_field :ano_modelo %>
		  </div>
		  <div class="field">
		    <%= f.label :possui_seguro %><br />
		    <%= f.check_box :possui_seguro %>
		  </div>
		  <div class="field">
		    <%= f.label :data_cadastro %><br />
		    <%= f.text_field :data_cadastro, :class => 'maskData' %>
		  </div>
		  <div class="actions">
		    <%= f.submit %>
		    <%= link_to 'Back', veiculos_path %>
		  </div>
		<% end %>
	</fieldset>
</div>		