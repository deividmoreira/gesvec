<div id="cadastro">
	<h1>  Perfil </h1>
    <fieldset>
    	<legend>Cadastro de Perfis</legend>
    	<%= link_to 'Novo', new_perfil_path, :class => "novo"  %>
      	<input type="text" name="txtPesquisa" id="txtPesquisa" />
      	<%=submit_tag 'Pesquisar'%>
      	
      	<table>
		  <tr>
		    <th>NÂº</th>
		    <th>Nome</th>
		    <!--<th>Exibir</th>-->
		    <th>Editar</th>
		    <th>Excluir</th>
		  </tr>
		<%cont = 0%>
		<% @perfils.each do |perfil| %>
		  <tr>
		  	<%cont = cont + 1%>
		    <td><%=  cont%></td>
		    <td><%= perfil.nome %></td>
		    <!--<td><%= link_to 'Mostrar', perfil%></td>-->
		    <td><%= link_to 'Editar', edit_perfil_path(perfil), :class=>'editar' %></td>
		    <td><%= link_to 'Excluir', perfil, :method => :delete, :confirm => "Deseja exluir?", :class=>'excluir' %></td>
		  </tr>
		<% end %>
		</table>
		<br />
		<%= will_paginate @perfils%>
    </fieldset>  	
